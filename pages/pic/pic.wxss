/* pages/pic/pic.wxss */
@import "pic-item/pic-item-template.wxss";
page {
    height: 100%;
}

/* 背景 */
.warp {
    height: 100%;
}

.picbackground{
  position: absolute;
  opacity: 0.8;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 顶部样式 */
.title{
  width: 100%;
  height: 65px;
  display: flex;
}

/* 返回上一级 */
.back {
  width:42px;
  height:30px;
  margin:5%;
}

/* 图标text */
.logotext {
  margin-top: 2.5%;
  width:70%;
  height:45px;
}

/* 上传 */
.upload {
  width:42px;
  height:30px;
  right: 0px;
  margin:5%;
}

.backimg, .logoimg, .uploadimg{
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 滚动Tab选项卡 */
.tabitem {
  width:100%;
  height: 10px;
  position:fixed;
}

.tab-h{
  width: 100%; 
  box-sizing:border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px; 
  white-space: nowrap;
  position: fixed;
  left: 0; 
  color: rgb(250, 244, 244);
  z-index: 99;
} 
.tab-item{
  margin:0 30rpx;
  display: inline-block;
} 
.tab-item.active{
  color: rgb(249, 249, 250);
  position: relative;
} 
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 93%;
  background: rgb(251, 251, 252);
  position: absolute; 
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
} 
.item-ans{ 
  width: 98%;
  display: flex; 
  justify-content: space-between;
  flex-direction: column;
  box-sizing: border-box; 
  height: 600rpx;
  border-radius: 3px;
  margin: 20rpx auto;
  background: rgba(0, 0, 0, 0.2);
} 
.photo{
  width: 100%;
  height:80%;
}
.photoimg{
  width:100%;
  height: 100%
}
.photomsg{
  width: 100%;
  height:20%;
  display: flex;
  flex-direction: row;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  position: relative;
  margin: 8rpx 8rpx;
} 
.avatar .img{
  width: 100%;
  height: 100%;
}
.expertInfo{
  font-size: 12px;
  color: #B0B0B0;
  width: 55%;
  line-height: 5.5em;
}
.pic-like{
  width:30%;
  height:100%;
  padding-top:5%;
}
.tab-content {
  margin-top: 40px;
}
.scoll-h{
  height: 100%;
}
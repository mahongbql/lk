/* pages/upload/upload.wxss */
.warp{
  position: absolute;
  width:100%;
  height:100%;
  z-index: -1;
}
.warp image{
  width:100%;
  height:100%;
}
.btn{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 10px;
  width: 100%;
}
.choose, .upload{
  width:45%;
  height:50px;
}
.pic{
  width: 100%;
  padding-top:10px; 
  display:flex;                
  justify-content: center;
}
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0,0,0,0.5);
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #ec5300;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.msg{
  width:100%;
  height:500px;
  top:10%;
  background: red;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.model-type{
  margin-top: 20px;
  width:100%;
  height:30px;
  color: #ec5300;
  font-size: 34rpx;
}
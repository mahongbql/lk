/* 滚动Tab选项卡 */
.post-content {
  width:96%;
  height:112px;
  margin:15px auto;
  box-shadow:0px 1px 2px 2px grey;
  -webkit-animation: show-animation 1.5s linear both;
  display: flex;
  flex-direction: row;
}
::-webkit-scrollbar
{
  width: 0;
  height: 0;
  color: transparent;
}

.post-pic{
  width:125px;
  height:100%;
  overflow: hidden;
}

.post-msg{
  width:300px;
  height:100%;
  display: flex;
  flex-direction: column;
}

.pic{
  width:100px;
  height:100px;
  margin: 6px;
  border-radius: 10px;
}

.title{
  height:30%;
  font-size: 30rpx;
  letter-spacing: 2px;
  padding:20rpx;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  color:white;
}

.title-nopic{
  height:35%;
  font-size: 38rpx;
  letter-spacing: 2px;
  padding:30rpx;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  color:white;
}

.line{
  width:95%;
  margin-top:18rpx;
  margin-left:3%;
  height:1px;
  background-color:#eee;
  margin-bottom: 5%;
}

.msg{
  margin-top:-10rpx;
  display: flex;
  flex-direction: row;
}

.msg-nopic{
  display: flex;
  flex-direction: row;
}

.avatar image{
  width:65rpx;
  height:65rpx;
  border-radius: 30px;
  margin:0 5px;
}

.nickName{
  font-size: 30rpx;
  line-height: 30px;
  color: grey;
}

.post-like{
  position: absolute;
  width:200px;
  height:100%;
  right: -90px;
}

.post-like-image{
  height: 16px;
  width: 16px;
  position: relative;
  vertical-align: middle;
  margin:0 10px;
}

.post-like-font{
  vertical-align: middle;
  font-family: sans-serif;
  font-size: 12px;
  color: grey;
}

@keyframes show-animation {
    0% {
      margin-top: 50px;
      opacity: 0;
    }
    100% {
      margin-top: 15px; 
      opacity: 1;
    }
}
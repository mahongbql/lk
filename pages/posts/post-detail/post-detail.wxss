@import "/pages/wxParse/wxParse.wxss";
.xing-p{
  margin: 5% 2%;
  color: #333;
  font-size: 34rpx;
  margin-bottom: 35rpx;
  line-height: 1.5;
}

.xing-img{
  margin:0 auto;
}

.container{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.head-image{
  width: 100%;
  height: 460rpx;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
  border-radius: 60px;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  font-weight: bold;
  font-size: 46rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool {
  margin-top: 20rpx;
  position: relative;
  z-index: 2;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img Image{
  width: 90rpx;
  height: 90rpx;
}
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  margin-bottom: 50rpx;
  text-indent: 2em;
}

.tool-line {
  position:absolute;
  top:45%;
  width:96%;
  height:1px;
  background-color:#eee;
  z-index:-1;
  margin:0 2%;
}
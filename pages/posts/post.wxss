@import "post-item/post-item-template.wxss";

.background-img {
  position: absolute;
  opacity: 0.8;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.create{
  position: fixed;
  width:30px;
  height:30px;
  bottom:2%;
  right:4%;
}
.create-img{
  width:100%;
  height:100%;  
}

page {
    height: 100%;
}

/* 背景 */
.warp {
    height: 100%;
}

/* 滚动Tab选项卡 */
.tabitem {
  width:100%;
  height: 10px;
  position:fixed;
}

.tab-h{
  width: 100%; 
  box-sizing:border-box;
  overflow: hidden;
  line-height: 80rpx;
  white-space: nowrap;
  position: fixed;
  left: 0; 
  color: rgb(250, 244, 244);
  z-index: 99;
} 
.tab-item{
  display: inline-block;
  font-size: 16px; 
  color:gray;
  width:48%;
  text-align: center;
} 
.tab-item.active{
  color:white;
  position: relative;
  -webkit-animation: active-get-animation 0.2s linear both;
}
.tab-content {
  margin-top: 40px;
}
.scoll-h{
  height: 100%;
}

@keyframes active-get-animation {
    0% {
      font-size: 16px; 
    }
    100% {
      font-size: 24px; 
    }
}
/* pages/login/login.wxss */
@import "data-item/data-item-template.wxss";
@import "posts-item/posts-item-template.wxss";

.upLevel{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
  overflow: hidden;
  z-index: 9000;
}

.button{
  width: 100%;
  height: 32px;
  bottom:16px;
  position: fixed;
  display: flex;
  flex-direction: row;
  line-height: 158%;
}

.confirm{
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.concel{
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #666;
}

.vipcontent{
  width:80%;
  height:300px;
  margin:0 auto;
  margin-top:10%;
  color: #fff;
}

page{
  height: 100%;
  width: 100%;
}
page .backimg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container{
  height:100%;
}

.userFileData{
  height:75%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:20px;
  height:25%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #ec5300;
}

.usermotto {
  margin-top: 200px;
}

.user{
  margin-top:10px;
  color: #ec5300;
  font-family: Tahoma,Arial,"宋体";
}

.vip{
  margin-top:10px;
  font-family: Tahoma,Arial,"宋体";

  background-image: -webkit-linear-gradient(left,#ec5300,yellow 10%,red 20%,#ec5300 30%, red 40%, red 50%,yellow 60%,#ec5300 70%,red 80%,yellow 90%,#ec5300 100%);
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    -webkit-background-size: 200% 100%; 
    -webkit-animation: masked-animation 4s linear infinite;
}

@keyframes masked-animation {
    0% {
        background-position: 0  0;
    }
    100% {
        background-position: -100%  0;
    }
}

/** 设置类型滚动 */
.tab-h{
  width: 100%; 
  box-sizing:border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px; 
  white-space: nowrap;
  left: 0; 
  color: #aaa;
  z-index: 99;
} 

.tab-item{
  margin:0 8%;
  display: inline-block;
} 

.tab-item.active{
  color: #aaa;
  position: relative;
} 
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 93%;
  background: #aaa;
  position: absolute; 
  bottom: 0;
  left: 3rpx;
  border-radius: 16rpx;
}

.scoll-h{
  height: 100%;
}



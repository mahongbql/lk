.posts-item-ans { 
  width: 84%;
  display: flex; 
  justify-content: space-between;
  flex-direction: column;
  box-sizing: border-box;
  border-radius: 3px;
  margin: 20rpx auto;
  box-shadow:0px 1px 2px 2px grey;
}

.posts-title{
  width:100%;
  font-weight: bold;
  font-size: 46rpx;
  padding: 12rpx;
}

.posts-msg{
  width:100%;
  height:50px;
  display: flex; 
  flex-direction: row;
}

.posts-like{
  width:64%;
  padding-top: 40rpx; 
}

.posts-like-font{
  vertical-align: middle;
  font-family: sans-serif;
  font-size: 12px;
  color: grey;
}

.posts-like-image{
  height: 16px;
  width: 16px;
  position: relative;
  vertical-align: middle;
  margin:0 10px;
}

.posts-sendtime{
  font-size: 22rpx;
  color: #aaa;
  padding-top: 56rpx;
}